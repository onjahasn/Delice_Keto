{% extends 'base.html.twig' %}

{% block body %}
	<div class="formulaire-connexion mb-4">
		<h3 class="text-center">Modifier l'utilisateur</h3>
		<form method="post" class="mt-4">
			<div class="form-group">
				<label for="name">Nom</label>
				<input type="text" id="name" name="name" class="form-control" value="{{ user.name }}" required>
			</div>
			<div class="form-group mt-3">
				<label for="email">Email</label>
				<input type="email" id="email" name="email" class="form-control" value="{{ user.email }}" required>
			</div>
			{% if is_granted("ROLE_ADMIN") %}
				<div class="form-group mt-3">
					<label for="roles">RÃ´les</label>
					<select name="role" id="role" class="form-control">
						<option value="ROLE_USER" {% if 'ROLE_USER' in user.roles %} selected {% endif %}>Utilisateur</option>
						<option value="ROLE_ADMIN" {% if 'ROLE_ADMIN' in user.roles %} selected {% endif %}>Administrateur</option>
					</select>
				</div>
			{% endif %}
			<button type="submit" class="btn mt-3">Enregistrer</button>
			<a href="{{ path('user_show', { id: app.user.id }) }}" class="btn mt-3">Retour</a>
		</form>
	</div>
{% endblock %}
