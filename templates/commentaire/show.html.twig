{% extends 'base.html.twig' %}

{% block title %}Détails du Commentaire
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="card shadow-sm">
			<div class="card-header bg-primary text-white">
				<h3 class="mb-0">Détails du Commentaire</h3>
			</div>
			<div class="card-body">
				<p class="mb-3">
					<strong>Description :</strong>
					<span class="text-muted">{{ commentaire.description }}</span>
				</p>
				<p class="mb-3">
					<strong>Créé le :</strong>
					<span class="text-muted">{{ commentaire.createdAt|date('Y-m-d H:i') }}</span>
				</p>
			</div>
			<div class="card-footer d-flex justify-content-between">
				<a href="{{ path('edit', { id: commentaire.id }) }}" class="btn btn-primary">
					<i class="fa fa-edit"></i>
					Éditer
				</a>
				<a href="{{ path('list') }}" class="btn btn-secondary">
					<i class="fa fa-list"></i>
					Retour à la liste
				</a>
			</div>
		</div>
	</div>
{% endblock %}

